<!DOCTYPE html>
<html>
  <head>
    <title>ProjectCEPTION</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>ProjectCEPTION</h1>
    <nav>
      <li><%= link_to("Home", root_path)%></li>
        <% if logged_in? %>
          <% if is_admin? %>
            <li><%=link_to("#{current_user.name}'s Dashboard", user_path(current_user.id))%></li>
          <% end %>
          <li><%= link_to "Logout", session_path(current_user), method: :delete%></li>
          <% if FinalGroup.any? %>
            <li><%= link_to "Final Groups!", final_groups_path%></li>
          <% end %>
        <% else %>
          <li><%= link_to("Register", new_user_path)%></li>
          <li><%= link_to("Login", new_session_path )%></li>
        <% end %>
    </nav>
    <% flash.each do |name, message| %>
      <p><%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
