<h1>User Login</h1>

<% if @error %>
  <p class='animated swing error_message'><%= @error %></p>
<% end  %>

<div class="container form-container">
<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :email %>:
  <%= f.text_field :email %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />

  <%= f.submit 'Login', :class => "waves-effect waves-light btn #00acc1 cyan darken-1" %>
<% end %>
</div>
