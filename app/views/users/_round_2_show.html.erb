<h3> Round 2 Pitches: </h3>
<% @pitches.each_with_index do |pitch, i| %>
  <ul>
    <li><%= link_to pitch.title, pitch_path(pitch.id) %> by <%= pitch.student.name %> (Current Ranking: <%= i + 1 %> )</li>
    <% if final_group_created(pitch) %>
      <p>Final Group Created</p>
    <% else %>
      <p><%= link_to 'Choose as final project', new_pitch_final_group_path(pitch)%></p>
      <% if leaders_already.include?(pitch.student)%>
        <em>Another pitch by this student has been chosen as a final project</em>
      <% end %>
    <%end%>
  </ul>
<% end %>
